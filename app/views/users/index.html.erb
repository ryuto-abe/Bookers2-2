<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render '/users/user', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table table-hover">
      <thead>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </thead>

      <% @users.each do |f| %>
      <tr>
        <td><%= attachment_image_tag f, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= f.name %></td>
        <td><%=link_to "Show", user_path(f.id) %></td>
      <% end %>
      </tr>
    </table>
    </div>
  </div>
</div>

